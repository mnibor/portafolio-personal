---
// Componente Job.astro
interface Props {
  name: string;
  position: string;
  startDate: string;
  endDate: string;
  summary: string;
  highlights: string[];
}

const { name, position, startDate, endDate, summary, highlights } = Astro.props;
---

<div class="p-6 bg-white rounded-lg shadow-md">
  <h3 class="mb-2 text-xl font-bold">{name}</h3>
  <p class="mb-1 text-gray-700">{position}</p>
  <p class="mb-4 text-sm text-gray-600">{startDate} - {endDate}</p>
  <p class="mb-4">{summary}</p>
  <h4 class="mb-2 font-semibold">Destacados:</h4>
  <ul class="pl-5 list-disc">
    {highlights.map((highlight) => (
      <li class="text-gray-700">{highlight}</li>
    ))}
  </ul>
</div>