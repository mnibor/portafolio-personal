---
import cvEs from '../../cv-es.json';

const { basicData } = cvEs;
const { name, label, location, profiles, summary } = basicData;
const { city, country } = location;
---

<section class="py-16 bg-gradient-to-b from-zinc-50 to-white">
  <div class="container max-w-6xl px-4 mx-auto">
    <div class="grid gap-12 md:grid-cols-3">
      <div class="flex flex-col items-center text-center">
        <img
          src="/foto.jpg"
          alt="Foto de perfil"
          class="w-48 h-48 mb-6 rounded-full"
        />
        <h1 class="mb-2 text-4xl font-bold">{name}</h1>
        <h2 class="mb-3 text-xl">{label}</h2>
        <p class="mb-6">{city}, {country}</p>

        <div class="flex flex-wrap items-center justify-center gap-2 text-center">
          {
            profiles &&
              profiles.map((profile) => (
                <a
                  href={profile.url}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="px-4 py-2 text-white bg-blue-600 rounded-full"
                >
                  {profile.network}
                </a>
              ))
          }
        </div>
      </div>

      <div class="md:col-span-2">
        <h3 class="mb-4 text-2xl font-bold">Sobre m√≠</h3>
        <div class="space-y-4 text-lg">
          <Fragment set:html={summary} />
        </div>
      </div>
    </div>
  </div>
</section>