---
import Layout from '../layouts/Layout.astro';
import Hero from '../components/sections/Hero.astro';
import Experience from '../components/sections/Experience.astro';
import Projects from '../components/sections/Projects.astro';
import Education from '../components/sections/Education.astro';
import Skills from '../components/sections/Skills.astro';
import Studying from '../components/sections/Studying.astro';

const sections = [
  { id: 'experience', title: 'Experiencia Laboral', component: Experience },
  { id: 'projects', title: 'Proyectos', component: Projects },
  { id: 'education', title: 'Educaci√≥n', component: Education },
  { id: 'skills', title: 'Habilidades', component: Skills },
  { id: 'studying', title: 'Estudiando', component: Studying },
];
---

<Layout title="Portafolio Personal">
  <main class="container max-w-6xl px-4 py-8 mx-auto antialiased">
    <Hero />
    {sections.map(({ id, title, component: Component }) => (
      <section id={id} class="py-16 scroll-mt-16">
        <h2 class="mb-8 text-3xl font-bold text-center text-gray-800">{title}</h2>
        <Component />
      </section>
    ))}
  </main>
</Layout>